<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/device1"
            android:id="@+id/device_imageview"
            android:layout_width="81dp"
            android:layout_height="78dp" />

        <TextView
            android:layout_below="@+id/device_imageview"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@android:color/background_dark"
            android:id="@+id/device_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginTop="25dp"
            android:layout_below="@+id/device_name_tv"
            android:background="@color/color_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>
</RelativeLayout>